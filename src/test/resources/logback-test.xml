<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <layout class="ch.qos.logback.classic.PatternLayout">
      <Pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</Pattern>
    </layout>
  </appender>

  <root level="warn">
    <appender-ref ref="STDOUT" />
  </root>
  
  <logger level="info" name="httpclient.wire" />
  <logger level="info" name="org.apache.commons.httpclient" />
  <logger level="info" name="gov.usgs.ngwmn.dm.DataBroker"/>
  <logger level="info" name="gov.usgs.ngwmn.dm.DataManagerServlet"/>
</configuration>